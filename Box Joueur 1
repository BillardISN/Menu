from tkinter import *
from tkinter import ttk
from tkinter.simpledialog import _QueryString


class _MyQueryString(_QueryString):

    def __init__(self, *args, **kw):
        _QueryString.__init__(self, *args, **kw)

    def buttonbox(self):
        box = ttk.Frame(self)
        w = ttk.Button(box, text="OK", width=10, command=self.ok, default=ACTIVE)
        w.pack(side=LEFT, padx=5, pady=5)
        w = ttk.Button(box, text="Annuler", width=10, command=self.cancel)
        w.pack(side=LEFT, padx=5, pady=5)
        self.bind("<Return>", self.ok)
        self.bind("<Escape>", self.cancel)
        box.pack()

def askstring(title, prompt, **kw):
    d = _MyQueryString(title, prompt, **kw)
    return d.result

def getpass():
    pwd = askstring("Joueur 1", "Joueur 1, entrez votre pseudo:", parent=root)
    label["text"] = str(pwd)

root = Tk()

label = Label(root)
label.pack()

Button(root, text="Joueur 1", command=getpass).pack()

root.mainloop()
